# Production environment variables (example)
# Copy to `.env.production` and replace placeholders with real values.

# Environment
DJANGO_ENV=production
DEBUG=False

# Django (required)
SECRET_KEY=CHANGE_ME__GENERATE_STRONG_RANDOM_SECRET
ALLOWED_HOSTS=cargo-viewer.com,www.cargo-viewer.com

# Cache (recommended)
REDIS_URL=redis://redis:6379/0

# Database (PostgreSQL in Docker, required)
POSTGRES_DB=cargo_viewer_prod
POSTGRES_USER=cargo_viewer_user
POSTGRES_PASSWORD=CHANGE_ME__GENERATE_STRONG_PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional: you can use DATABASE_URL instead of POSTGRES_* (or leave empty)
# DATABASE_URL=postgresql://cargo_viewer_user:CHANGE_ME__GENERATE_STRONG_PASSWORD@db:5432/cargo_viewer_prod

# Telegram (required if using bot flows)
WEBAPP_URL=https://example.com/
TELEGRAM_BOT_TOKEN=000000:replace-me
TELEGRAM_RESPONSES_CHAT_ID=0

# CargoTech (optional; server-side login)
CARGOTECH_PHONE=
CARGOTECH_PASSWORD=
CARGOTECH_TOKEN_CACHE_TTL=86400

# YooKassa (optional)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_WEBHOOK_SECRET=

# Sentry (optional; leave empty to disable)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Encryption for SystemSetting secrets (optional; Fernet key, base64)
SETTINGS_ENCRYPTION_KEY=

# CDN (optional)
CDN_ENABLED=False
CDN_URL=https://cdn.example.com
CDN_STATIC_PREFIX=static
